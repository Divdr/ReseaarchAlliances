@model Reseaarch_Alliances.Models.tbluser

@{
    Layout = null;
}

<div class="row">

    <div class="col-md-12 pb--30">
        <!-- Contact Form Start -->
        <div class="contact--form" data-form="ajax">
            <div class="contact--title">
                <h3 class="h4">Edit Your Info</h3>
            </div>

            @using (Html.BeginForm("UpdateInfo", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model=>model.UserID)
                <div class="row gutter--20">
                    
                    <div class=col-xs-6 col-xxs-12">
                        <div class="form-group">
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter First Name" } })
                        </div>
                    </div>

                    <div class="col-xs-6 col-xxs-12">
                        <div class="form-group">
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Last Name" } })
                        </div>
                    </div>

                    <div class="col-xs-6 col-xxs-12">
                        <div class="form-group">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", Type = "Email", @placeholder = "Enter Email" } })
                        </div>
                    </div>

                    <div class="col-xs-6 col-xxs-12">
                        <div class="form-group">
                            @Html.EditorFor(model => model.MoNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Mobile Number" } })
                        </div>
                    </div>

                    <div class="col-xs-12">
                        <input type="submit" class="form-control btn btn-primary mt--10" value="Update">
                    </div>
                </div>
            }
        </div>
        <!-- Contact Form End -->
    </div>
</div>
