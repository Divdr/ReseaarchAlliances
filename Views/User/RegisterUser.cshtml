@model Reseaarch_Alliances.Models.tbluser

@{
    ViewBag.Title = "RegisterUser";
    Layout = "~/Views/Shared/_User.cshtml";
}


<!-- Page Header Start -->
<div class="page--header pt--60 pb--60 text-center" data-bg-img="img/page-header-img/bg.jpg" data-overlay="0.85">
    <div class="container">
        <div class="title">
            <h2 class="h1 text-white">Registration</h2>
        </div>

        <ul class="breadcrumb text-gray ff--primary">
            <li><a href="#" class="btn-link">Home</a></li>
            <li class="active"><span class="text-primary">User Registeration</span></li>
        </ul>
    </div>
</div>
<!-- Page Header End -->
<!-- Contact Section Start -->
<div class="contact--section pt--50">
    <div class="container">

        <div class="row">
            
            <div class="col-md-12 pb--60">
                <!-- Contact Form Start -->
                <div class="contact--form" data-form="ajax">
                    <div class="contact--title">
                        <h3 class="h4">Registration Form</h3>
                    </div>
                    
                        @using (Html.BeginForm("SaveUser", "User", FormMethod.Post, new { enctype="multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row gutter--20">
                                <div class="col-xs-6 col-xxs-12">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control",@placeholder="Enter Username"  } })
                                    </div>
                                </div>

                                <div class="col-xs-6 col-xxs-12">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control",Type="password" ,@placeholder="Enter Password" } })
                                    </div>
                                </div>

                                <div class=col-xs-6 col-xxs-12">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control",@placeholder="Enter First Name"  } })
                                    </div>
                                </div>

                                <div class="col-xs-6 col-xxs-12">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control",@placeholder="Enter Last Name"  } })
                                    </div>
                                </div>

                                <div class=col-xs-6 col-xxs-12">
                                    <div class="form-group">
                                        <select name="Gender" required class="form-control">
                                            <option>Select Gender</option>
                                            <option value="0">Male</option>
                                            <option value="1">Female</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-xs-6 col-xxs-12">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control",Type="Email",@placeholder="Enter Email"  } })
                                    </div>
                                </div>

                                <div class=col-xs-6 col-xxs-12">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control",Type="date",@placeholder="Enter BirthDate" } })
                                    </div>
                                </div>

                                <div class="col-xs-6 col-xxs-12">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.MoNumber, new { htmlAttributes = new { @class = "form-control",@placeholder="Enter Mobile Number" } })
                                    </div>
                                </div>

                                <div class=col-xs-6 col-xxs-12">
                                    <div class="form-group" id="CityID">
                                        <select name="CityID" required class="form-control">
                                            <option>Select City</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-xs-6 col-xxs-12">
                                    <div class="form-group">
                                        <input type="file" name="ProfilePic" id="ProfilePic" class="form-control">
                                    </div>
                                </div>


                                <div class="col-xs-12">
                                    <input type="submit" class="form-control btn btn-primary mt--10" value="Register">
                                </div>
                            </div>
                        }
                </div>
                <!-- Contact Form End -->
            </div>
        </div>
    </div>
</div>
<!-- Contact Section End -->

<script>

    window.onload = getAllCities;

    function getAllCities() {
        $.ajax({
            url: "@Url.Action("getAllCities","User")",
            success: function (result) {
                $("#CityID").html(result);
            }
        });
    }

</script>