@model IEnumerable<Reseaarch_Alliances.Models.tblarticle>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_User.cshtml";
}


<!-- Page Header Start -->
<div class="page--header pt--60 pb--60 text-center" data-bg-img="~/Content/User/img/page-header-img/bg.jpg" data-overlay="0.85">
    <div class="container">
        <div class="title">
            <h2 class="h1 text-white">Articles</h2>
        </div>

        <ul class="breadcrumb text-gray ff--primary">
            <li><a href="#" class="btn-link">Home</a></li>
            <li class="active"><span class="text-primary">Articles</span></li>
        </ul>
    </div>
</div>
<!-- Page Header End -->
<!-- Page Wrapper Start -->
<section class="page--wrapper pt--80 pb--20">
    <div class="container">
        <div class="row">
            <!-- Main Content Start -->
            <div class="main--content col-md-12 pb--30" data-trigger="stickyScroll">
                <div class="main--content-inner">
                    <div class="row MasonryRow">
                        @foreach (var item in Model)
                        {
                            <div class="col-sm-4 col-xs-12 pb--30">
                                <!-- Post Item Start -->
                                <div class="post--item" data-scroll-reveal="bottom">
                                    <!-- Post Image Start -->
                                    <div class="post--img">
                                        <a href="@Url.Action("ArticleInfo","Articles",new { id=item.ArticleID })"><img src="~/Content/Images/Post/@item.FeaturedImage" width="100%" alt=""></a>
                                    </div>
                                    <!-- Post Image End -->
                                    <!-- Post Info Start -->
                                    <div class="post--info">
                                        <!-- Post Meta Start -->
                                        <div class="post--meta">
                                            <ul class="nav">
                                                <li>
                                                    <a href="@Url.Action("Index","User",new { id=item.tbluser.UserID })">
                                                        <img src="~/Content/Images/User/@item.tbluser.ProfilePic" alt="">
                                                        <span>@item.tbluser.FirstName  @item.tbluser.LastName</span>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#">
                                                        <i class="mr--8 fa fa-calendar-o"></i>
                                                        <span>@item.CreatedDt.Date</span>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                        <!-- Post Meta End -->
                                        <!-- Post Title Start -->
                                        <div class="post--title mt--10">
                                            <h3 class="h6">
                                                <a href="@Url.Action("ArticleInfo","Articles",new { id=item.ArticleID })" class="btn-link">@item.Title</a>
                                            </h3>
                                        </div>
                                        <!-- Post Title End -->
                                        <!-- Post Meta Start -->
                                        <div class="post--meta">
                                            <ul class="nav">
                                                <li>
                                                    <i class="mr--8 fa fa-tags"></i>

                                                    <a href="#"><span>@item.tblsubcategory.SubCategoryName</span></a>
                                                </li>
                                            </ul>
                                        </div>
                                        <!-- Post Meta End -->
                                        <!-- Post Content Start -->
                                        <div class="post--content text-darker mt--10">
                                            <p>
                                                @item.Description
                                            </p>
                                        </div>
                                        <!-- Post Content End -->
                                        <!-- Post Action Start -->
                                        <div class="post--action text-darkest mt--8">
                                            <a href="@Url.Action("ArticleInfo","Articles",new { id=item.ArticleID })" class="btn-link">Continue Reading<i class="ml--10 text-primary fa fa-caret-right"></i></a>
                                        </div>
                                        <!-- Post Action End -->
                                    </div>
                                    <!-- Post Info End -->
                                </div>
                                <!-- Post Item End -->
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Page Wrapper End -->
