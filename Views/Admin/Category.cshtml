@model IEnumerable<Reseaarch_Alliances.Models.tblcategory>

@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewBag.Title</h3>
        <a class="btn btn-info" href="@Url.Action("AddCategory","Admin")" style="float:right;color:white">Add Category</a>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryName)
                    </th>
                    <th>
                        View More
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>
                        <td>
                            <a class="btn btn-default" href="@Url.Action("SubCategoryByCat","Admin",new { id=item.CategoryID})">View Sub Category</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
